<div class="container">
    <div class="row text-center">
        <div class="col-6 offset-3">
            <img src="/assets/images/burger.png" alt="cartoon burger image" class="my-4 img-fluid">
        </div>
    </div>
    <div class="row my-2 py-2">
        <div class="col-sm-12 col-md-10 offset-md-1">
            <h1 class="text-center welcome">Welcome to Burger Muncher!</h1>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-sm-6 col-md-5">
            <h3 class="ml-3 pl-4 colTitle">Burgers to Eat</h3>
            <ul>
                {{#each burgers}}
                {{#if isEaten}}
                <li data-id="{{id}}">
                    <div class="input-group mb-1">
                        <input type="text" readonly class="form-control-plaintext" name="isEaten" value="false" placeholder="{{burger_name}}">
                        <div class="input-group-append">
                            <button class="btn btn-primary btn-sm eat" type="button">Eat Me</button>
                        </div>
                    </div>
                </li> {{/if}} 
                {{else}}
                <li>No burgers have been created. Add one below!</li>
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6 col-md-5 offset-md-2">
            <h3 class="ml-4 pl-3 colTitle">Burgers Eaten</h3>
            <ul>
                {{#each burgers}}
                {{#if isEaten}}
                <li data-id="{{id}}">
                    <input type="text" readonly class="form-control-plaintext" name="isEaten" value="true" placeholder="{{burger_name}}">
                </li> {{/if}}
                {{else}}
                <li>Nothing has been eaten yet.</li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row my-2 py-2">
        <div class="col-sm-12 col-md-10 offset-md-1">
            <p class="text-center py-2 info">Once you type in the kind of burger you want, click "Submit".</p>

            <form action="/" method="post" id="submitBurger">
                <div class="form-group">
                    <textarea name="burger_name" id="burgerName" rows="5" class="form-control" placeholder="What kind of burger do you want to eat?" autofocus></textarea>
                </div>
                <div class="text-center">
                    <button class="btn btn-success mb-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/assets/js/index.js"></script>